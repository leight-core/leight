{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"composite": true,
		"removeComments": false,
		"moduleResolution": "Node",
		"jsx": "react",
		"rootDir": "src",
		"outDir": "dist",
		"lib": [
			"DOM",
			"ESNext"
		],
		"skipLibCheck": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	]
}
